    <p class="lead">This is a website for generating silly insults, sort of like mad libs</p>
    
</div>

<div class="row">
    <div class="col-md-4">
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">

                <input type="submit" value="generate a random insult" class="btn btn-default" />
                

            </div>
        }
        @Html.DisplayFor(modelItem => modelItem.AdjectiveWord)
        @Html.DisplayFor(modelItem => modelItem.NounWord)
        @Html.DisplayFor(modelItem => modelItem.TitleWord)
    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">

    </div>
</div>